<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <com.unikove.giftology.CustomLinearLayout
        android:id="@+id/toplinlay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/toplabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toplinlay"
        android:background="@drawable/heading_band"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingTop="3dip"
        android:text="My Gifts"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />

    <LinearLayout
        android:id="@+id/linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toplabel"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/toplabel"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:text="Will be delivered today"
                android:textColor="#9E4848"
                android:textSize="20dip"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rel_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView01"
                android:layout_centerInParent="true"
                android:layout_marginBottom="1dip"
                android:layout_marginTop="5dip"
                android:padding="1dip" >

                <RelativeLayout
                    android:id="@+id/rel_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="1dip" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/otherrelative"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/big_image_bg" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/toplabel"
            android:layout_marginTop="20dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/couponcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/couponcode"
                android:text="0123456789"
                android:textColor="#FFFFFF" />

            <RelativeLayout
                android:id="@+id/linearLayoutTermsCondition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/couponcode"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/termsandconditiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/light_band"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="8dip"
                    android:paddingLeft="5dip"
                    android:paddingTop="8dip"
                    android:text="Terms And Conditions"
                    android:textColor="#9B9B9B"
                    android:textSize="15dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/tandcimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:layout_marginTop="5dip"
                    android:paddingBottom="8dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="8dip"
                    android:src="@drawable/down_aro" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/redeeminstructions"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayoutTermsCondition"
                android:layout_marginTop="1dip"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/redeeminstructionstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/light_band"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="8dip"
                    android:paddingLeft="5dip"
                    android:paddingTop="8dip"
                    android:text="How to Redeem"
                    android:textColor="#9B9B9B"
                    android:textSize="15dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/redeeminstructionsimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dip"
                    android:layout_marginTop="5dip"
                    android:paddingBottom="8dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="8dip"
                    android:src="@drawable/down_aro" />
            </RelativeLayout>

            <Button
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="happy birthday dude..."
                android:layout_marginTop="10dip"
                android:background="@drawable/msgbox"
                android:layout_centerHorizontal="true"
                android:textColor="#595959"
                android:gravity="center"
                android:padding="10dip"
                android:layout_below="@id/redeeminstructions" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>